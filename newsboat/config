include /usr/share/doc/newsboat/contrib/colorschemes/solarized-dark
auto-reload yes

external-url-viewer "urlview"
browser vimb

max-items 60

macro m set browser "/usr/local/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
macro l set browser "/usr/local/bin/vivaldi-stable %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"

unbind-key j
unbind-key k
unbind-key J
unbind-key K

bind-key j down
bind-key k up
bind-key U show-urls

highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
highlight feedlist "---.*---" yellow default bold
highlight feedlist ".*0/0.." default default invis
